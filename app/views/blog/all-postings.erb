<div class="col-md-6 col-md-offset-3">

<h2 id="page-title">All Blog Posts</h2>

<% @listings = Blog.where(publish: [true]) %> %>
<% @listings.each do |listing| %>
<div class="col-md-2 blog-listing">
<strong><h4><a href="/blog/show/<%= listing.id %>"><%= listing.title %></a></h4></strong>
<em><%= listing.tags %> Post</em><br>
</div>
<% end %>




</div> <!-- close col-md-6 col-md-offset-3 -->
