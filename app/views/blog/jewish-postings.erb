<div class="col-md-6 col-md-offset-3">

<h2 id="page-title">Blog Posts on Jewish Topics</h2>

<% @listings = Blog.where(publish: [true], tags: ["Jewish"]) %> %>
<% @listings.each do |listing| %>
<div class="col-md-12 blog-listing">
<strong><h4><a href="/blog/show/<%= listing.id %>"><%= listing.title %></a></h4></strong>
<p><em><a href="/blog/show/<%= listing.id %>">Read the Article</a></em></p>
</div>
<% end %>



</div> <!-- close col-md-6 col-md-offset-3 -->
