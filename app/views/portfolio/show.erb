<div class="col-md-6 col-md-offset-3">

<div class="col-md-12 index-content">
<h2 id="blog-title"><%= @item.name %></h2>
<h4><%= @item.created_on %></h4>
<br>
</div></div>


<div class="container">
  <div class="col-md-6 col-md-offset-3">

    <div class="content">
      <div class="row">
        <div class="col-md-6">

          <br><br>

          <p>
            <%= @item.description.gsub(/\n/, '<br/>') %>
          </p>

          <% if !blog_link? %>
            <img src="/images/more-icon.png" width="80">
              <a href="<%= @item.blog_link %>" target="_new">Read More</a>
            <br>
          <% else %>
            <img src="/images/more-icon.png" width="80">No Blog
            <br>
          <% end %>

          <% if !github_link? %>
            <img src="/images/github-icon.png" width="80">
              <a href="<%= @item.link %>" target="_new">View GitHub Repository</a>
          <% else %>
            <img src="/images/github-icon.png" width="80">No GitHub Repository
            <br>
          <% end %>

          <% if !website_link? %>
            <img src="/images/weblink-icon.png" width="80">
              <a href="<%= @item.website_link %>" target="_new">View Website</a>
          <% else %>
            <img src="/images/weblink-icon.png" width="80">No Website Link
            <br>
          <% end %>

        </div>

        <div class="row">

          <% if !youtube_link? %>
            <iframe width="253" height="220" src="https://www.youtube.com/embed/<%= @item.youtube_link.gsub("https://www.youtube.com/watch?v=", '') %>?showinfo=0" frameborder="0" allowfullscreen></iframe>
          <% else %>
            <img src="<%= @item.image %>" width="353" height="220">
          <% end %>

        </div>

      </div>
    </div>
  </div>
  </div>

  <div class="col-md-6 col-md-offset-4">
    <div class="col-md-9 index-content">
      <a href="https://www.facebook.com/sharer/sharer.php?u=http://bengreenberg.herokuapp.com/portfolio/show/<%= @item.id %>" target="_blank">
            <img src="/images/facebook-icon.png" width="60">
      </a>
      <a href="https://twitter.com/home?status=Check%20out%20this%20portfolio%20project%20http://bengreenberg.herokuapp.com/portfolio/show/<%= @item.id %>" target="_blank">
        <img src="/images/twitter-icon.png" width="60">
      </a>

  </div>
</div>
